@model Professor

<form asp-controller="Professor" asp-action="EditarProfessor" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="mb-3 col-md-4">
        <label class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control">
    </div>

    <div class="mb-3 col-md-2">
        <label class="form-label">Email</label>
        <input type="text" asp-for="Email" class="form-control ">
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a class="btn btn-primary" type="button" asp-controller="Professor" asp-action="Index"> Voltar</a>
    </div>
</form>